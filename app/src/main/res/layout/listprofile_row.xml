<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorCardBackground"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="2dp"
        android:layout_margin="8dp"
        android:id="@+id/list_cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/list_myname_img"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/list_gh_img"/>

        <TextView
                android:id="@+id/list_myname_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/list_myname_img"
                card_view:layout_constraintBottom_toBottomOf="@+id/list_myname_img"
                card_view:layout_constraintTop_toTopOf="@+id/list_myname_img"/>

        <ImageView
                android:id="@+id/list_gh_img"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/list_gh_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/list_gh_img"
                card_view:layout_constraintTop_toTopOf="@+id/list_gh_img"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/list_tw_img"/>

        <ImageView
                android:id="@+id/list_tw_img"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/list_gh_img"
                card_view:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
                android:id="@+id/list_tw_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/list_tw_img"
                card_view:layout_constraintTop_toTopOf="@+id/list_tw_img"
                card_view:layout_constraintBottom_toBottomOf="@+id/list_tw_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorCardBackground"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:id="@+id/list_cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/list_myname_text"
                android:text="@string/profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:padding="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gh_constraint_layout"
                android:layout_margin="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/list_myname_text"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:id="@+id/list_gh_img"
                    android:src="@drawable/github_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/list_gh_text"
                    card_view:layout_constraintBottom_toBottomOf="@+id/list_gh_text"/>

            <TextView
                    android:id="@+id/list_gh_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/profilegithub"
                    android:textSize="30dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/list_gh_img"
                    card_view:layout_constraintTop_toTopOf="@+id/gh_constraint_layout"
                    card_view:layout_constraintBottom_toBottomOf="@+id/gh_constraint_layout"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tw_constraint_layout"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/gh_constraint_layout" android:layout_marginBottom="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent">

            <ImageView
                    android:id="@+id/list_tw_img"
                    android:src="@drawable/twitter_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="@+id/list_tw_text"
                    card_view:layout_constraintTop_toTopOf="@+id/list_tw_text"/>


            <TextView
                    android:id="@+id/list_tw_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profiletwitter"
                    android:textSize="30dp"
                    android:padding="8dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/list_tw_img"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>